import os
import numpy as np
from glob import glob
from distutils.core import setup
from distutils.extension import Extension
from distutils.command.install_data import install_data
from Cython.Distutils import build_ext

incCheMPS2path = '${CMAKE_SOURCE_DIR}/CheMPS2/include'
libCheMPS2path = '${CMAKE_BINARY_DIR}/CheMPS2'

def get_depends(dirname):
    result = glob('%s/*.h' % dirname)
    result += glob('%s/*.pxd' % dirname)
    return result

setup(
    name='CheMPS2',
    version='${CheMPS2_VERSION}',
    description='${CheMPS2_DESCRIPTION}',
    author='${CheMPS2_AUTHORS}',
    author_email='${CheMPS2_EMAIL}',
    download_url='${CheMPS2_URL}',
    license='${CheMPS2_LICENSE}',
    package_dir = {'CheMPS2': 'PyCheMPS2'},
    packages=['CheMPS2'],
    cmdclass = {'build_ext': build_ext},
    ext_modules=[
        Extension("CheMPS2.PyCheMPS2",
            sources=['${PyCheMPS2_SOURCES}/PyCheMPS2.pyx'],
            depends=get_depends('${PyCheMPS2_SOURCES}')+get_depends(incCheMPS2path),
            library_dirs=[libCheMPS2path],
            libraries=['CheMPS2'],
            include_dirs=[np.get_include(), incCheMPS2path],
            language="c++"),
    ],
    classifiers=[
        'Development Status :: 3 - Alpha',
        'Environment :: Console',
        'Intended Audience :: Science/Research',
        'License :: OSI Approved :: GNU General Public License (GPL)',
        'Operating System :: POSIX :: Linux',
        'Programming Language :: Python :: 2',
        'Programming Language :: Cython',
        'Programming Language :: C++',
        'Topic :: Science/Engineering :: Molecular Science'
    ],
)


